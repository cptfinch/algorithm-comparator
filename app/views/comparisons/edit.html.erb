<h1>Editing comparison</h1>

<%= error_messages_for :comparison %>

<% form_for(@comparison) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Result</b><br />
    <%= f.text_field :result %>
  </p>

  <p>
    <b>Comment</b><br />
    <%= f.text_area :comment %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @comparison %> |
<%= link_to 'Back', comparisons_path %>

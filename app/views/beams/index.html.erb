<h1>Listing beams</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Value</th>
  </tr>

<% for beam in @beams %>
  <tr>
    <td><%=h beam.number %></td>
    <td><%=h beam.value %></td>
    <td><%= link_to 'Show', beam %></td>
    <td><%= link_to 'Edit', edit_beam_path(beam) %></td>
    <td><%= link_to 'Destroy', beam, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

